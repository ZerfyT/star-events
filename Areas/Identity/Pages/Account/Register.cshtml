@page
@model star_events.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
            <h2 class="h4 mb-3">Create a new account</h2>
            <hr class="mb-4" />

            <!-- Success or Error Messages -->
            <div id="feedbackMessage" role="alert" class="mb-3">
                @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["Message"]
                    </div>
                }
                else if (ViewData.ModelState[""]?.Errors.Any() ?? false)
                {
                    <div class="alert alert-danger" role="alert">
                        @foreach (var error in ViewData.ModelState[""].Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </div>

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                       aria-describedby="emailHelp" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <!-- Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"
                       aria-describedby="passwordHelp" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <small id="passwordHelp" class="form-text text-muted">Must be at least 6 characters.</small>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
                       aria-describedby="confirmPasswordHelp" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <small id="confirmPasswordHelp" class="form-text text-muted">Please re-enter your password.</small>
            </div>

            <!-- Submit Button -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3 class="h5 mb-3">Use another service to register</h3>
            <hr class="mb-4" />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank" rel="noopener">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary me-2 mb-2" name="provider" value="@provider.Name"
                                            title="Log in using your @provider.DisplayName account" aria-label="Register with @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}