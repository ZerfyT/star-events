@page
@model star_events.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>
                <h2 class="h4 mb-3">Use a local account to log in</h2>
                <hr class="mb-4" />

                <!-- Feedback Messages -->
                <div id="feedbackMessage" role="alert" class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }
                    else if (ViewData.ModelState[""]?.Errors.Any() ?? false)
                    {
                        <div class="alert alert-danger" role="alert">
                            @foreach (var error in ViewData.ModelState[""].Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }
                </div>

                <!-- Email Field -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                           aria-describedby="emailHelp" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <small id="emailHelp" class="form-text text-muted">Enter the email associated with your account.</small>
                </div>

                <!-- Password Field -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"
                           aria-describedby="passwordHelp" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <small id="passwordHelp" class="form-text text-muted">Enter your password.</small>
                </div>

                <!-- User Type Field -->
                <div class="form-floating mb-3">
                    <select asp-for="Input.UserType" class="form-control" aria-required="true"
                            aria-describedby="userTypeHelp">
                        <option value="">Select User Type</option>
                        <option value="Customer">Customer</option>
                        <option value="Admin">Admin</option>
                        <option value="Organizer">Event Organizer</option>
                    </select>
                    <label asp-for="Input.UserType" class="form-label">User Type</label>
                    <span asp-validation-for="Input.UserType" class="text-danger"></span>
                    <small id="userTypeHelp" class="form-text text-muted">Select your user type for access.</small>
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Submit Button -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <!-- Additional Links -->
                <div class="mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-6">
        <section>
            <h3 class="h5 mb-3">Use another service to log in</h3>
            <hr class="mb-4" />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank" rel="noopener">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary me-2 mb-2" name="provider" value="@provider.Name"
                                            title="Log in using your @provider.DisplayName account" aria-label="Log in with @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}