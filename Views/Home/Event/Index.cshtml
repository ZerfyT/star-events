@model Event

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/event-detail.css">
}

<div class="event-detail-container">
    <!-- Event Hero Section -->
    <div class="event-hero">
        <div class="hero-background">
            @if (Model.AllImagePaths.Any())
            {
                <img src="@Model.AllImagePaths[0]" alt="@Model.Title" class="hero-image">
            }
            <div class="hero-overlay"></div>
        </div>

        <div class="hero-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="event-badge">
                            <i class="bi bi-tag-fill"></i>
                            @if (Model.Category != null)
                            {
                                <span>@Model.Category.Name</span>
                            }
                        </div>

                        <h1 class="event-title">@Model.Title</h1>

                        <div class="event-meta">
                            <div class="meta-item">
                                <i class="bi bi-calendar3"></i>
                                <span>@Model.StartDateTime.ToString("dddd, MMMM dd, yyyy")</span>
                            </div>
                            <div class="meta-item">
                                <i class="bi bi-clock"></i>
                                <span>@Model.StartDateTime.ToString("HH:mm") - @Model.EndDateTime.ToString("HH:mm")</span>
                            </div>
                            <div class="meta-item">
                                <i class="bi bi-geo-alt-fill"></i>
                                <span>
                                    @if (Model.Location != null)
                                    {
                                        @Model.Location.Name
                                        <text>, </text>
                                        @Model.Location.City
                                    }
                                    else
                                    {
                                        <text>Location TBD</text>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <!-- Event Details -->
            <div class="col-lg-8">
                <div class="event-details-section">
                    <div class="section-header">
                        <h2>About This Event</h2>
                    </div>
                    <div class="event-description">
                        <p>@Model.Description</p>
                    </div>

                    <!-- Event Images Gallery -->
                    @if (Model.AllImagePaths != null && Model.AllImagePaths.Any())
                    {
                        <div class="event-gallery">
                            <h3>Event Gallery</h3>
                            <div class="gallery-grid">
                                @foreach (var imagePath in Model.AllImagePaths.Take(6))
                                {
                                    <div class="gallery-item">
                                        <img src="@imagePath" alt="@Model.Title" class="gallery-image">
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Event Information -->
                    <div class="event-info">
                        <h3>Event Information</h3>
                        <div class="info-grid">
                            <div class="info-item">
                                <i class="bi bi-person-fill"></i>
                                <div>
                                    <strong>Organizer</strong>
                                    <p>@Model.OrganizerName</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-clock-history"></i>
                                <div>
                                    <strong>Duration</strong>
                                    <p>@Model.Allocated_Duration minutes</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-shield-check"></i>
                                <div>
                                    <strong>Status</strong>
                                    <p class="status-@Model.Status.ToLower()">@Model.Status</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ticket Selection -->
            <div class="col-lg-4">
                <div class="ticket-selection-card">
                    <div class="card-header">
                        <h3>
                            <i class="bi bi-ticket-perforated"></i>
                            Select Tickets
                        </h3>
                    </div>

                    <form id="ticketForm">
                        <input type="hidden" id="eventId" value="@Model.EventID" />
                        <div class="ticket-types">
                            @{
                                var ticketTypes = ViewBag.TicketTypes as List<star_events.Models.TicketType>;
                            }
                            @if (ticketTypes != null && ticketTypes.Any())
                            {
                                @foreach (var ticketType in ticketTypes)
                                {
                                    var ticketTypeId = ticketType.TicketTypeID.ToString().ToLower();
                                    var ticketTypeName = ticketType.Name.ToLower().Replace(" ", "");
                                    
                                    <div class="ticket-type">
                                        <div class="ticket-header">
                                            <h4>@ticketType.Name</h4>
                                            <span class="ticket-price">LKR @ticketType.Price.ToString("N0")</span>
                                        </div>
                                        <p class="ticket-description">
                                            @if (ticketType.Name.ToLower().Contains("vip"))
                                            {
                                                <text>Premium seating with exclusive amenities</text>
                                            }
                                            else if (ticketType.Name.ToLower().Contains("standard"))
                                            {
                                                <text>Great view with standard amenities</text>
                                            }
                                            else if (ticketType.Name.ToLower().Contains("economy"))
                                            {
                                                <text>Affordable seating option</text>
                                            }
                                            else
                                            {
                                                <text>Standard event ticket</text>
                                            }
                                        </p>
                                        <div class="ticket-availability">
                                            <small class="text-muted">
                                                @ticketType.AvailableQuantity of @ticketType.TotalQuantity available
                                            </small>
                                        </div>
                                        <div class="ticket-quantity">
                                            <label>Quantity:</label>
                                            <div class="quantity-controls">
                                                <button type="button" class="qty-btn" onclick="decreaseQuantity('@ticketTypeName')">-</button>
                                                <input type="number" id="@ticketTypeName-qty" name="ticketTypeNameQuantity" 
                                                       value="0" min="0" max="@Math.Min(ticketType.AvailableQuantity, 8)" readonly>
                                                <button type="button" class="qty-btn" onclick="increaseQuantity('@ticketTypeName')">+</button>
                                            </div>
                                        </div>
                                        <input type="hidden" id="@ticketTypeName-id" value="@ticketType.TicketTypeID" />
                                        <input type="hidden" id="@ticketTypeName-price" value="@ticketType.Price" />
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <p>No ticket types available for this event.</p>
                                </div>
                            }
                        </div>

                        <div class="ticket-summary" id="ticketSummary" style="display: none;">
                            <h4>Order Summary</h4>
                            <div class="summary-items" id="summaryItems"></div>
                            <div class="summary-total">
                                <div class="total-row">
                                    <span>Total Amount:</span>
                                    <span class="total-price" id="totalPrice">LKR 0</span>
                                </div>
                            </div>
                        </div>

                        <div class="ticket-actions">
                            <button type="button" class="btn btn-primary btn-book" id="selectSeatsBtn" disabled>
                                <i class="bi bi-arrow-right"></i>
                                Select Seats
                            </button>
                            <div class="secure-notice">
                                <i class="bi bi-shield-check"></i>
                                <span>Secure booking process</span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include the event JavaScript -->
<script>
    // Global variables for ticket management
    let selectedTickets = [];
    let totalAmount = 0;

    // Initialize event listeners
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('selectSeatsBtn').addEventListener('click', proceedToSeatSelection);
        updateTicketSummary();
    });

    function increaseQuantity(ticketTypeName) {
        const qtyInput = document.getElementById(`${ticketTypeName}-qty`);
        const maxQty = parseInt(qtyInput.getAttribute('max'));
        const currentQty = parseInt(qtyInput.value);
        
        if (currentQty < maxQty) {
            qtyInput.value = currentQty + 1;
            updateTicketSummary();
        }
    }

    function decreaseQuantity(ticketTypeName) {
        const qtyInput = document.getElementById(`${ticketTypeName}-qty`);
        const currentQty = parseInt(qtyInput.value);
        
        if (currentQty > 0) {
            qtyInput.value = currentQty - 1;
            updateTicketSummary();
        }
    }

    function updateTicketSummary() {
        const ticketTypes = document.querySelectorAll('.ticket-type');
        selectedTickets = [];
        totalAmount = 0;

        ticketTypes.forEach(ticketType => {
            const qtyInput = ticketType.querySelector('input[type="number"]');
            const quantity = parseInt(qtyInput.value);
            
            if (quantity > 0) {
                const ticketTypeName = qtyInput.id.replace('-qty', '');
                const ticketTypeId = document.getElementById(`${ticketTypeName}-id`).value;
                const price = parseFloat(document.getElementById(`${ticketTypeName}-price`).value);
                const name = ticketType.querySelector('h4').textContent;

                selectedTickets.push({
                    ticketTypeId: parseInt(ticketTypeId),
                    name: name,
                    price: price,
                    quantity: quantity
                });

                totalAmount += price * quantity;
            }
        });

        // Update summary display
        const summaryContainer = document.getElementById('ticketSummary');
        const summaryItems = document.getElementById('summaryItems');
        const totalPriceElement = document.getElementById('totalPrice');
        const selectSeatsBtn = document.getElementById('selectSeatsBtn');

        if (selectedTickets.length > 0) {
            summaryContainer.style.display = 'block';
            summaryItems.innerHTML = selectedTickets.map(ticket => `
                <div class="summary-item">
                    <span>${ticket.name} x${ticket.quantity}</span>
                    <span>LKR ${(ticket.price * ticket.quantity).toLocaleString()}</span>
                </div>
            `).join('');
            totalPriceElement.textContent = `LKR ${totalAmount.toLocaleString()}`;
            selectSeatsBtn.disabled = false;
        } else {
            summaryContainer.style.display = 'none';
            selectSeatsBtn.disabled = true;
        }
    }

    function proceedToSeatSelection() {
        if (selectedTickets.length === 0) {
            alert('Please select at least one ticket type.');
            return;
        }

        // Store selected tickets in session storage
        sessionStorage.setItem('selectedTickets', JSON.stringify(selectedTickets));
        sessionStorage.setItem('totalAmount', totalAmount.toString());
        sessionStorage.setItem('eventId', document.getElementById('eventId').value);

        // Navigate to seat selection page
        const eventId = document.getElementById('eventId').value;
        const selectedTicketsJson = encodeURIComponent(JSON.stringify(selectedTickets));
        window.location.href = `/Home/SelectSeats?id=${eventId}&selectedTickets=${selectedTicketsJson}`;
    }
</script>
