@model star_events.Models.Promotion

@{
    ViewData["Title"] = "Promotion Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-eye me-2"></i>Promotion Details
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model?.PromotionID" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Promotion Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-tag me-1"></i>@Html.DisplayNameFor(model => model.PromoCode)
                                </dt>
                                <dd class="col-sm-8">
                                    <strong class="text-primary fs-5">@Html.DisplayFor(model => model.PromoCode)</strong>
                                </dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar me-1"></i>Event
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.Event != null)
                                    {
                                        <span class="badge bg-info fs-6">@Model.Event.Title</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Event Assigned</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-percentage me-1"></i>@Html.DisplayNameFor(model => model.DiscountType)
                                </dt>
                                <dd class="col-sm-8">
                                    @{
                                        var discountTypeClass = Model.DiscountType == "Percentage" ? "bg-success" : "bg-warning";
                                    }
                                    <span class="badge @discountTypeClass fs-6">@Html.DisplayFor(model => model.DiscountType)</span>
                                </dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-dollar-sign me-1"></i>@Html.DisplayNameFor(model => model.DiscountValue)
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.DiscountType == "Percentage")
                                    {
                                        <span class="text-success font-weight-bold fs-5">@Html.DisplayFor(model => model.DiscountValue)%</span>
                                    }
                                    else
                                    {
                                        <span class="text-success font-weight-bold fs-5">$@Html.DisplayFor(model => model.DiscountValue)</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar-alt me-1"></i>@Html.DisplayNameFor(model => model.StartDate)
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="text-info">@Model.StartDate.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                </dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar-times me-1"></i>@Html.DisplayNameFor(model => model.EndDate)
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="text-info">@Model.EndDate.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                </dd>
                                
                                <dt class="col-sm-4">
                                    <i class="fas fa-toggle-on me-1"></i>Status
                                </dt>
                                <dd class="col-sm-8">
                                    @{
                                        var now = DateTime.Now;
                                        var isExpired = Model.EndDate < now;
                                        var isNotStarted = Model.StartDate > now;
                                        var isActive = Model.IsActive && !isExpired && !isNotStarted;
                                        
                                        string statusClass;
                                        string statusText;
                                        
                                        if (!Model.IsActive)
                                        {
                                            statusClass = "bg-secondary";
                                            statusText = "Inactive";
                                        }
                                        else if (isExpired)
                                        {
                                            statusClass = "bg-danger";
                                            statusText = "Expired";
                                        }
                                        else if (isNotStarted)
                                        {
                                            statusClass = "bg-warning";
                                            statusText = "Not Started";
                                        }
                                        else
                                        {
                                            statusClass = "bg-success";
                                            statusText = "Active";
                                        }
                                    }
                                    <span class="badge @statusClass fs-6">@statusText</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Promotion Timeline</h6>
                        </div>
                        <div class="card-body">
                            @{
                                var totalDuration = Model.EndDate - Model.StartDate;
                                var elapsed = now - Model.StartDate;
                                var remaining = Model.EndDate - now;
                                
                                var progressPercentage = 0.0;
                                if (totalDuration.TotalDays > 0)
                                {
                                    progressPercentage = Math.Min(100, Math.Max(0, (elapsed.TotalDays / totalDuration.TotalDays) * 100));
                                }
                            }
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Duration:</span>
                                    <strong>@totalDuration.Days days</strong>
                                </div>
                                <div class="progress mt-1" style="height: 8px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @progressPercentage.ToString("F0")%"></div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Time Remaining:</span>
                                    <strong class="@(remaining.TotalDays < 0 ? "text-danger" : remaining.TotalDays < 7 ? "text-warning" : "text-success")">
                                        @(remaining.TotalDays < 0 ? "Expired" : remaining.TotalDays.ToString("F0") + " days")
                                    </strong>
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <div class="h6 text-primary">Discount Value</div>
                                <div class="h4 text-success">
                                    @if (Model.DiscountType == "Percentage")
                                    {
                                        <text>@Model.DiscountValue%</text>
                                    }
                                    else
                                    {
                                        <text>$@Model.DiscountValue</text>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model?.PromotionID" class="btn btn-warning">
                                    <i class="fas fa-edit me-1"></i>Edit Promotion
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model?.PromotionID" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Delete Promotion
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-list me-1"></i>View All Promotions
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
