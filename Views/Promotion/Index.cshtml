@model IEnumerable<star_events.Models.Promotion>

@{
    ViewData["Title"] = "Promotions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-percentage me-2"></i>Promotions
                </h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create New Promotion
                </a>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">All Promotions</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <i class="fas fa-tag me-1"></i>Promo Code
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar me-1"></i>Event
                                        </th>
                                        <th>
                                            <i class="fas fa-percentage me-1"></i>Discount Type
                                        </th>
                                        <th>
                                            <i class="fas fa-dollar-sign me-1"></i>Discount Value
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar-alt me-1"></i>Start Date
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar-times me-1"></i>End Date
                                        </th>
                                        <th>
                                            <i class="fas fa-toggle-on me-1"></i>Status
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cogs me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong class="text-primary">@Html.DisplayFor(modelItem => item.PromoCode)</strong>
                                            </td>
                                            <td>
                                                @if (item.Event != null)
                                                {
                                                    <span class="badge bg-info">@item.Event.Title</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Event</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var discountTypeClass = item.DiscountType == "Percentage" ? "bg-success" : "bg-warning";
                                                }
                                                <span class="badge @discountTypeClass">@Html.DisplayFor(modelItem => item.DiscountType)</span>
                                            </td>
                                            <td>
                                                @if (item.DiscountType == "Percentage")
                                                {
                                                    <span class="text-success font-weight-bold">@Html.DisplayFor(modelItem => item.DiscountValue)%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success font-weight-bold">$@Html.DisplayFor(modelItem => item.DiscountValue)</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@item.StartDate.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <small>@item.EndDate.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                @{
                                                    var now = DateTime.Now;
                                                    var isExpired = item.EndDate < now;
                                                    var isNotStarted = item.StartDate > now;
                                                    var isActive = item.IsActive && !isExpired && !isNotStarted;
                                                    
                                                    string statusClass;
                                                    string statusText;
                                                    
                                                    if (!item.IsActive)
                                                    {
                                                        statusClass = "bg-secondary";
                                                        statusText = "Inactive";
                                                    }
                                                    else if (isExpired)
                                                    {
                                                        statusClass = "bg-danger";
                                                        statusText = "Expired";
                                                    }
                                                    else if (isNotStarted)
                                                    {
                                                        statusClass = "bg-warning";
                                                        statusText = "Not Started";
                                                    }
                                                    else
                                                    {
                                                        statusClass = "bg-success";
                                                        statusText = "Active";
                                                    }
                                                }
                                                <span class="badge @statusClass">@statusText</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.PromotionID" class="btn btn-info btn-sm" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.PromotionID" class="btn btn-warning btn-sm" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.PromotionID" class="btn btn-danger btn-sm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-percentage fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Promotions Found</h5>
                            <p class="text-muted">Get started by creating your first promotion.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Create First Promotion
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "pageLength": 10,
                "order": [[ 4, "desc" ]], // Sort by Start Date descending
                "columnDefs": [
                    { "orderable": false, "targets": 7 }
                ]
            });
        });
    </script>
}
