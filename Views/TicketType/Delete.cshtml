@model TicketType

@{
    ViewData["Title"] = "Delete Ticket Type";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-trash me-3"></i>Delete Ticket Type</h1>
            <p>Confirm deletion of this ticket type</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="delete-card">
            <div class="card-header">
                <h5><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>Warning!
                    </h5>
                    <p class="mb-0">Are you sure you want to delete this ticket type? This action cannot be undone and
                        may affect existing bookings.</p>
                </div>

                <h5 class="mb-3">Ticket Type Information:</h5>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-tag me-1"></i>@Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="detail-value">
                        <strong>@Html.DisplayFor(model => model.Name)</strong>
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-calendar-event me-1"></i>Event
                    </div>
                    <div class="detail-value">
                        @if (Model.Event != null)
                        {
                            <span class="badge bg-info">@Model.Event.Title</span>
                        }
                        else
                        {
                            <span class="text-muted">No Event Assigned</span>
                        }
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-currency-dollar me-1"></i>@Html.DisplayNameFor(model => model.Price)
                    </div>
                    <div class="detail-value">
                        <span class="text-success font-weight-bold">$@Html.DisplayFor(model => model.Price)</span>
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-boxes me-1"></i>@Html.DisplayNameFor(model => model.TotalQuantity)
                    </div>
                    <div class="detail-value">
                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.TotalQuantity)</span>
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-check-circle me-1"></i>@Html.DisplayNameFor(model => model.AvailableQuantity)
                    </div>
                    <div class="detail-value">
                        @{
                            var availablePercentage = Model.TotalQuantity > 0 ? (double)Model.AvailableQuantity / Model.TotalQuantity * 100 : 0;
                            var badgeClass = availablePercentage > 50 ? "bg-success" : availablePercentage > 25 ? "bg-warning" : "bg-danger";
                        }
                        <span class="badge @badgeClass">@Html.DisplayFor(model => model.AvailableQuantity)</span>
                        <small class="text-muted">(@availablePercentage.ToString("F0")% available)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="stats-card">
            <div class="card-header">
                <h5><i class="bi bi-graph-down me-2"></i>Impact Analysis</h5>
            </div>
            <div class="card-body">
                @{
                    var soldQuantity = Model.TotalQuantity - Model.AvailableQuantity;
                }

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Tickets Sold:</span>
                        <strong class="text-warning">@soldQuantity</strong>
                    </div>
                    @if (soldQuantity > 0)
                    {
                        <small class="text-danger">⚠️ Deleting this ticket type may affect existing bookings</small>
                    }
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Available:</span>
                        <strong>@Model.AvailableQuantity</strong>
                    </div>
                </div>

                <div class="text-center">
                    <div class="h6 text-primary">Revenue at Risk</div>
                    <div class="h5 text-danger">$@((soldQuantity * Model.Price).ToString("F2"))</div>
                </div>
            </div>
        </div>

        <div class="stats-card">
            <div class="card-header">
                <h5><i class="bi bi-gear me-2"></i>Actions</h5>
            </div>
            <div class="card-body">
                <form asp-action="Delete" class="d-grid gap-2">
                    <input type="hidden" asp-for="TicketTypeID"/>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you absolutely sure you want to delete this ticket type? This action cannot be undone!')">
                        <i class="bi bi-trash me-2"></i>Yes, Delete Ticket Type
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
