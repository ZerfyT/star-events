@model star_events.Controllers.EventsReportViewModel

@{
    ViewData["Title"] = "Events Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-calendar-event me-3"></i>Events Report</h1>
            <p>Analyze event performance, attendance, and status</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">End Date</label>
                        <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel me-1"></i>Apply Filters
                        </button>
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="button" class="btn btn-success" onclick="exportReport('events')">
                            <i class="bi bi-download me-1"></i>Export CSV
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-primary">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-primary">@Model.TotalEvents</p>
                    <p class="stats-label">Total Events</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-success">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-success">@Model.ActiveEvents</p>
                    <p class="stats-label">Active Events</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-info">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-info">@Model.CompletedEvents</p>
                    <p class="stats-label">Completed Events</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-danger">
                    <i class="bi bi-x-circle"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-danger">@Model.CancelledEvents</p>
                    <p class="stats-label">Cancelled Events</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Event Status Breakdown -->
<div class="row mb-4">
    <div class="col-xl-6">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-pie-chart me-2"></i>Event Status Distribution</h5>
            </div>
            <div class="card-body">
                @if (Model.TotalEvents > 0)
                {
                    <div class="status-breakdown">
                        <div class="status-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div class="status-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Active Events</div>
                                    <small class="text-muted">Currently running</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@Model.ActiveEvents</div>
                                <small class="text-muted">@((Model.ActiveEvents * 100.0 / Model.TotalEvents).ToString("F1"))%</small>
                            </div>
                        </div>
                        <div class="status-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div class="status-icon bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-calendar-check"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Completed Events</div>
                                    <small class="text-muted">Finished successfully</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@Model.CompletedEvents</div>
                                <small class="text-muted">@((Model.CompletedEvents * 100.0 / Model.TotalEvents).ToString("F1"))%</small>
                            </div>
                        </div>
                        <div class="status-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div class="status-icon bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-x-circle"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Cancelled Events</div>
                                    <small class="text-muted">Cancelled or postponed</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@Model.CancelledEvents</div>
                                <small class="text-muted">@((Model.CancelledEvents * 100.0 / Model.TotalEvents).ToString("F1"))%</small>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No events data available</p>
                }
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-calendar me-2"></i>Date Range Summary</h5>
            </div>
            <div class="card-body">
                <div class="date-summary">
                    <div class="summary-item d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-calendar-event me-2"></i>Report Period</span>
                        <span class="fw-semibold">@Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-clock me-2"></i>Days Covered</span>
                        <span class="fw-semibold">@((Model.EndDate - Model.StartDate).Days + 1) days</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-graph-up me-2"></i>Events per Day</span>
                        <span class="fw-semibold">@((Model.TotalEvents / Math.Max((Model.EndDate - Model.StartDate).Days + 1, 1)).ToString("F1"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Events Table -->
<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-table me-2"></i>Event Details</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="border-0">Event ID</th>
                                <th class="border-0">Title</th>
                                <th class="border-0">Start Date</th>
                                <th class="border-0">End Date</th>
                                <th class="border-0">Status</th>
                                <th class="border-0">Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.Events)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-semibold">#@evt.EventID</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold">@evt.Title</span>
                                    </td>
                                    <td>@evt.StartDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@evt.EndDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge @(evt.Status == "Active" ? "bg-success" : evt.Status == "Completed" ? "bg-info" : "bg-danger")">
                                            @evt.Status
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(evt.Description?.Length > 50 ? evt.Description.Substring(0, 50) + "..." : evt.Description)</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportReport(type) {
            const startDate = document.querySelector('input[name="startDate"]').value;
            const endDate = document.querySelector('input[name="endDate"]').value;
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("Export", "Reports")';
            
            const typeInput = document.createElement('input');
            typeInput.type = 'hidden';
            typeInput.name = 'reportType';
            typeInput.value = type;
            form.appendChild(typeInput);
            
            const formatInput = document.createElement('input');
            formatInput.type = 'hidden';
            formatInput.name = 'format';
            formatInput.value = 'csv';
            form.appendChild(formatInput);
            
            if (startDate) {
                const startInput = document.createElement('input');
                startInput.type = 'hidden';
                startInput.name = 'startDate';
                startInput.value = startDate;
                form.appendChild(startInput);
            }
            
            if (endDate) {
                const endInput = document.createElement('input');
                endInput.type = 'hidden';
                endInput.name = 'endDate';
                endInput.value = endDate;
                form.appendChild(endInput);
            }
            
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

        // Add status icon styling
        const style = document.createElement('style');
        style.textContent = `
            .status-icon {
                width: 40px;
                height: 40px;
                font-size: 1rem;
            }
        `;
        document.head.appendChild(style);
    </script>
}
