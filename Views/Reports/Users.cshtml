@model star_events.Controllers.UsersReportViewModel

@{
    ViewData["Title"] = "Users Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-people me-3"></i>Users Report</h1>
            <p>Analyze user registrations, roles, and activity across the platform</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row align-items-end">
                    <div class="col-md-2">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="startDate" class="form-control"
                               value="@Model.StartDate.ToString("yyyy-MM-dd")"/>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">End Date</label>
                        <input type="date" name="endDate" class="form-control"
                               value="@Model.EndDate.ToString("yyyy-MM-dd")"/>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select">
                            <option value="">All Roles</option>
                            <option value="Admin" selected="@(Model.SelectedRole == "Admin")">Admin</option>
                            <option value="EventOrganizer" selected="@(Model.SelectedRole == "EventOrganizer")">Event
                                Organizer
                            </option>
                            <option value="Customer" selected="@(Model.SelectedRole == "Customer")">Customer</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel me-1"></i>Apply Filters
                        </button>
                    </div>
                    <div class="col-md-3 text-end">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-success" onclick="exportReport('users', 'csv')">
                                <i class="bi bi-file-earmark-spreadsheet me-1"></i>Export CSV
                            </button>
                            <button type="button" class="btn btn-danger" onclick="exportReport('users', 'pdf')">
                                <i class="bi bi-file-earmark-pdf me-1"></i>Export PDF
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-primary">
                    <i class="bi bi-people"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-primary">@Model.TotalUsers</p>
                    <p class="stats-label">Total Users</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-danger">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-danger">@Model.AdminUsers</p>
                    <p class="stats-label">Admin Users</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-success">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-success">@Model.EventOrganizerUsers</p>
                    <p class="stats-label">Event Organizers</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-info">
                    <i class="bi bi-person"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-info">@Model.CustomerUsers</p>
                    <p class="stats-label">Customers</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Role Distribution -->
<div class="row mb-4">
    <div class="col-xl-6">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-pie-chart me-2"></i>Role Distribution</h5>
            </div>
            <div class="card-body">
                @if (Model.TotalUsers > 0)
                {
                    <div class="role-breakdown">
                        <div class="role-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div
                                    class="role-icon bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-shield-check"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Admin Users</div>
                                    <small class="text-muted">System administrators</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@Model.AdminUsers</div>
                                <small
                                    class="text-muted">@((Model.AdminUsers * 100.0 / Model.TotalUsers).ToString("F1"))%</small>
                            </div>
                        </div>
                        <div class="role-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div
                                    class="role-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Event Organizers</div>
                                    <small class="text-muted">Event creators and managers</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@Model.EventOrganizerUsers</div>
                                <small
                                    class="text-muted">@((Model.EventOrganizerUsers * 100.0 / Model.TotalUsers).ToString("F1"))%</small>
                            </div>
                        </div>
                        <div class="role-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div
                                    class="role-icon bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">Customers</div>
                                    <small class="text-muted">Event attendees and bookers</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-bold">@Model.CustomerUsers</div>
                                <small
                                    class="text-muted">@((Model.CustomerUsers * 100.0 / Model.TotalUsers).ToString("F1"))%</small>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No users data available</p>
                }
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-calendar me-2"></i>Date Range Summary</h5>
            </div>
            <div class="card-body">
                <div class="date-summary">
                    <div class="summary-item d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-calendar-event me-2"></i>Report Period</span>
                        <span
                            class="fw-semibold">@Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-clock me-2"></i>Days Covered</span>
                        <span class="fw-semibold">@((Model.EndDate - Model.StartDate).Days + 1) days</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between align-items-center mb-3">
                        <span><i class="bi bi-graph-up me-2"></i>Users per Day</span>
                        <span
                            class="fw-semibold">@((Model.TotalUsers / Math.Max((Model.EndDate - Model.StartDate).Days + 1, 1)).ToString("F1"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-table me-2"></i>User Details</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                        <tr>
                            <th class="border-0">User ID</th>
                            <th class="border-0">Email</th>
                            <th class="border-0">Name</th>
                            <th class="border-0">Roles</th>
                            <th class="border-0">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@user.Id.Substring(0, 8)...</span>
                                </td>
                                <td>
                                    <span class="fw-bold">@user.Email</span>
                                </td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>
                                    @{
                                        var userRoles = ViewBag.UserRoles as Dictionary<string, List<string>>;
                                        var roles = userRoles?.GetValueOrDefault(user.Id, new List<string>()) ?? new List<string>();
                                    }
                                    @foreach (var role in roles)
                                    {
                                        <span
                                            class="badge @(role == "Admin" ? "bg-danger" : role == "EventOrganizer" ? "bg-success" : "bg-info") me-1">
                                                @role
                                            </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-success">Active</span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportReport(type, format) {
            const startDate = document.querySelector('input[name="startDate"]').value;
            const endDate = document.querySelector('input[name="endDate"]').value;
            const role = document.querySelector('select[name="role"]').value;

            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("Export", "Reports")';

            const typeInput = document.createElement('input');
            typeInput.type = 'hidden';
            typeInput.name = 'reportType';
            typeInput.value = type;
            form.appendChild(typeInput);

            const formatInput = document.createElement('input');
            formatInput.type = 'hidden';
            formatInput.name = 'format';
            formatInput.value = format;
            form.appendChild(formatInput);

            if (startDate) {
                const startInput = document.createElement('input');
                startInput.type = 'hidden';
                startInput.name = 'startDate';
                startInput.value = startDate;
                form.appendChild(startInput);
            }

            if (endDate) {
                const endInput = document.createElement('input');
                endInput.type = 'hidden';
                endInput.name = 'endDate';
                endInput.value = endDate;
                form.appendChild(endInput);
            }

            if (role) {
                const roleInput = document.createElement('input');
                roleInput.type = 'hidden';
                roleInput.name = 'role';
                roleInput.value = role;
                form.appendChild(roleInput);
            }

            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

        // Add role icon styling
        const style = document.createElement('style');
        style.textContent = `
            .role-icon {
                width: 40px;
                height: 40px;
                font-size: 1rem;
            }
        `;
        document.head.appendChild(style);
    </script>
}
