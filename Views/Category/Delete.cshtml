@model star_events.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-trash"></i> Delete Category</h1>
    <p>Remove category from the system</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="delete-card">
            <div class="card-header">
                <h5><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
            </div>
            <div class="card-body text-center">
                <div class="warning-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h4>Are you sure you want to delete this category?</h4>
                <p class="text-muted">This action cannot be undone. All events associated with this category will be affected.</p>
                
                <div class="details-card mt-4">
                    <div class="card-header">
                        <h6><i class="bi bi-tags"></i> Category to be deleted</h6>
                    </div>
                    <div class="card-body">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-tag"></i> @Html.DisplayNameFor(model => model.Name)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                        
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-text-paragraph"></i> @Html.DisplayNameFor(model => model.Description)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                </div>
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="CategoryID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete Category
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
