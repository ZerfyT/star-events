@model star_events.Controllers.BookingIndexViewModel

@{
    ViewData["Title"] = "Bookings Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-ticket-perforated me-3"></i>Bookings Management</h1>
            <p>Monitor and manage all booking transactions</p>
        </div>
        <div>
            <span class="badge bg-success fs-6">
                <i class="bi bi-shield-check me-1"></i>
                @(Model.IsAdmin ? "Administrator" : "Event Organizer")
            </span>
        </div>
    </div>
</div>
<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-primary">
                    <i class="bi bi-ticket-perforated"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-primary">@Model.TotalBookings</p>
                    <p class="stats-label">Total Bookings</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-success">
                    <i class="bi bi-currency-dollar"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-success">$@Model.TotalRevenue.ToString("N2")</p>
                    <p class="stats-label">Total Revenue</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-warning">
                    <i class="bi bi-clock"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-warning">@Model.PendingBookings</p>
                    <p class="stats-label">Pending</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-danger">
                    <i class="bi bi-x-circle"></i>
                </div>
                <div class="ms-3">
                    <p class="stats-number text-danger">@Model.CancelledBookings</p>
                    <p class="stats-label">Cancelled</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Bookings -->
<div class="row">
    <div class="col-12">
        <div class="table-card">
            <div class="card-header">
                <h5><i class="bi bi-table me-2"></i>Recent Bookings</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                        <tr>
                            <th class="border-0">Booking ID</th>
                            <th class="border-0">Customer</th>
                            <th class="border-0">Amount</th>
                            <th class="border-0">Tickets</th>
                            <th class="border-0">Status</th>
                            <th class="border-0">Date</th>
                            <th class="border-0">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var booking in Model.Bookings.Take(20))
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">#@booking.BookingID</span>
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-semibold">@(booking.User?.UserName ?? "N/A")</div>
                                        <small class="text-muted">@(booking.User?.Email ?? "")</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">$@booking.TotalAmount.ToString("N2")</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@booking.Tickets.Count tickets</span>
                                </td>
                                <td>
                                        <span
                                            class="badge @(booking.Status == "Confirmed" ? "bg-success" : booking.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                            @booking.Status
                                        </span>
                                </td>
                                <td>@booking.BookingDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@booking.BookingID"
                                           class="btn btn-outline-info btn-action" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
