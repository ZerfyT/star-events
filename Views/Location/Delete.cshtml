@model Location

@{
    ViewData["Title"] = "Delete Venue";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-trash"></i> Delete Venue</h1>
    <p>Remove venue from the system</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="delete-card">
            <div class="card-header">
                <h5><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
            </div>
            <div class="card-body text-center">
                <div class="warning-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h4>Are you sure you want to delete this venue?</h4>
                <p class="text-muted">This action cannot be undone. All events scheduled at this venue will be
                    affected.</p>

                <div class="details-card mt-4">
                    <div class="card-header">
                        <h6><i class="bi bi-geo-alt"></i> Venue to be deleted</h6>
                    </div>
                    <div class="card-body">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Name)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-geo-alt"></i> @Html.DisplayNameFor(model => model.Address)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-geo"></i> @Html.DisplayNameFor(model => model.City)
                            </div>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.City)
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="bi bi-people"></i> @Html.DisplayNameFor(model => model.Capacity)
                            </div>
                            <div class="detail-value">
                                <span class="badge bg-info">@Html.DisplayFor(model => model.Capacity) people</span>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="LocationID"/>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete Venue
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
