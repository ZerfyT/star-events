@model Location

@{
    ViewData["Title"] = "Venue Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-eye"></i> Venue Details</h1>
    <p>View venue information</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="details-card">
            <div class="card-header">
                <h5><i class="bi bi-geo-alt"></i> Venue Information</h5>
            </div>
            <div class="card-body">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-geo-alt"></i> @Html.DisplayNameFor(model => model.Address)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Address)
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-geo"></i> @Html.DisplayNameFor(model => model.City)
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.City)
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-people"></i> @Html.DisplayNameFor(model => model.Capacity)
                    </div>
                    <div class="detail-value">
                        <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Capacity) people</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.LocationID" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit Venue
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
