@model star_events.Models.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var user = ViewBag.User as ApplicationUser;
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-person-gear me-3"></i>Edit User</h1>
            <p>Update user information and settings</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Back to Users
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="form-card">
            <div class="card-header">
                <h5><i class="bi bi-person-fill-gear me-2"></i>Edit User Information</h5>
            </div>
            <div class="card-body">
                <!-- User Information Form -->
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="UserId"/>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="bi bi-person me-1"></i>First Name
                                </label>
                                <input name="FirstName" value="@user?.FirstName" class="form-control"
                                       placeholder="Enter first name"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="bi bi-person me-1"></i>Last Name
                                </label>
                                <input name="LastName" value="@user?.LastName" class="form-control"
                                       placeholder="Enter last name"/>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-envelope me-1"></i>Email Address
                        </label>
                        <input name="Email" value="@user?.Email" type="email" class="form-control"
                               placeholder="Enter email address"/>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-telephone me-1"></i>Contact Number
                        </label>
                        <input name="ContactNo" value="@user?.ContactNo" class="form-control"
                               placeholder="Enter contact number"/>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-geo-alt me-1"></i>Address
                        </label>
                        <textarea name="Address" class="form-control" rows="3"
                                  placeholder="Enter address">@user?.Address</textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="bi bi-star me-1"></i>Loyalty Points
                        </label>
                        <input name="LoyaltyPoints" value="@user?.LoyaltyPoints" type="number" class="form-control"
                               placeholder="Enter loyalty points"/>
                        <small class="form-text text-muted">Current loyalty points for this user</small>
                    </div>

                    <div class="form-group mt-4">
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <a asp-action="Details" asp-route-id="@user?.Id" class="btn btn-outline-info">
                                <i class="bi bi-eye me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </form>

                <hr class="my-4">

                <!-- Role Management Form -->
                <form asp-action="ManageRoles">
                    <input type="hidden" name="userId" value="@Model.UserId"/>

                    <h5><i class="bi bi-shield-check me-2"></i>Role Management</h5>
                    <p class="text-muted">Select a role for this user (only one role can be assigned)</p>

                    <div class="row">
                        @for (var i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName"/>
                                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" type="radio"
                                           name="SelectedRole" value="@Model.Roles[i].RoleName"/>
                                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                                        @Model.Roles[i].RoleName
                                    </label>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-shield-check me-2"></i>Update Roles
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
