<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="TixWave - Online Event Ticketing Platform">
    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- CSS Reset / Optional Frameworks -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <!--Box-icons-->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css"/>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    @await RenderSectionAsync("Styles", false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.4/sweetalert2.all.min.js"></script>
</head>
<body>

<!-- Anti-forgery token for AJAX requests -->
@Html.AntiForgeryToken()

<!-- Header -->
<header class="site-header" id="site-header">
    <div class="container">
        <div class="header-content">
            <!-- Brand Section -->
            <div class="header-inner">
                <i class="bx bx-movie-play"></i>
                <span class="brand-name">TIXWAVE</span>
            </div>

            <!-- Navigation Pills - Thinner -->
            <nav class="nav-pills d-none d-md-flex">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a>
                <a class="nav-link" href="@Url.Action("Index", "Home")#event-section">Events</a>
                <a class="nav-link" href="@Url.Action("Index", "Home")#event-section">Trending Now</a>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")" href="@Url.Action("Dashboard", "Home")">My Bookings</a>
            </nav>

            <!-- Right Side - Add Button + Actions -->
            <div class="header-right">

                <div class="actions">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<main>
    @RenderBody()
</main>


<!-- Footer -->
@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    var hideFooter = (currentController == "Home" && (currentAction == "SelectSeats" || currentAction == "Payment"));
}

@if (!hideFooter)
{
    <footer class="main-footer">
        <div class="container-fluid px-4">
            <div class="footer-content">
                <!-- Brand Section -->
                <div class="footer-brand">
                    @* <div class="footer-logos"> *@
                    @*     <img src="~/images/donga.png" alt="BWT Alpine Logo" class="footer-logo bwt-logo"> *@
                    @*     <span class="brand-name">TIXWAVE</span> *@
                    @* </div> *@
                    <div class="footer-brand-text">
                        <div class="footer-title">TixWave</div>
                        <p class="footer-tagline">Your Gateway to Unforgettable Events</p>
                    </div>
                </div>

                <!-- Links Section -->
                <div class="footer-links">
                    <div class="footer-section">
                        <h5>Services</h5>
                        <a href="#">Browse Events</a>
                        <a href="#">Popular Events</a>
                        <a href="#">Ticket Booking</a>
                        <a href="#">VIP Packages</a>
                    </div>
                    <div class="footer-section">
                        <h5>Support</h5>
                        <a href="#">Help Center</a>
                        <a href="#">Contact Us</a>
                    </div>
                    <div class="footer-section">
                        <h5>Company</h5>
                        <a href="#">About Us</a>
                        <a href="#">Privacy Policy</a>
                        <a href="#">Terms & Conditions</a>
                    </div>
                </div>
            </div>
        
            <!-- Bottom Section -->
            <div class="footer-bottom align-items-center">
                <div class="footer-copyright">
                    <p>&copy; 2025 TixWave. All rights reserved. | Powered by StarEvents Pvt Ltd</p>
                </div>
                <div class="footer-social">
                    <a href="#" class="social-link" aria-label="Facebook">
                        <i class="bx bxl-facebook"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Twitter">
                        <i class="bx bxl-twitter"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="LinkedIn">
                        <i class="bx bxl-linkedin"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Instagram">
                        <i class="bx bxl-instagram"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>
}



<!-- JS Libraries -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
